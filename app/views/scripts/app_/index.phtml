    <script>
    const editButtons = document.querySelectorAll('.edit-button');
    const saveButtons = document.querySelectorAll('.save-button');

    for (let i = 0; i < editButtons.length; i++) {
        editButtons[i].addEventListener('click', (event) => {
            event.preventDefault();
            const row = editButtons[i].closest('tr');
            row.classList.add('editable-row');
            for (const field of row.querySelectorAll('input')) {
                field.removeAttribute('disabled');
            }
            editButtons[i].style.display = 'none';
            saveButtons[i].style.display = 'block';
        });

        saveButtons[i].addEventListener('click', (event) => {
            event.preventDefault();
            const row = saveButtons[i].closest('tr');
            for (const field of row.querySelectorAll('input')) {
                field.setAttribute('disabled', 'true');
            }
            row.classList.remove('editable-row');
            editButtons[i].style.display = 'block';
            saveButtons[i].style.display = 'none';
            // Env√≠a los datos actualizados al servidor (debes implementar esto)
        });
    }
